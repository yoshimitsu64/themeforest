{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "jsx": "react-jsx",
    "noEmit": false,
    "isolatedModules": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
      "globalStyles/*": [
        "./globalStyles/*"
      ],
      "pages/*": [
        "./pages/*"
      ],
      "components/*": [
        "./components/*"
      ],
      "constants/*": [
        "./constants/*"
      ],
      "assets/*": [
        "./assets/*"
      ],
      "hooks/*": [
        "./hooks/*"
      ],
      "appTypes/*": [
        "./appTypes/*"
      ],
      "helpers/*": [
        "./helpers/*"
      ],
      "config/*": [
        "./config/*"
      ],
      "validation/*": [
        "./validation/*"
      ]
    }
  },
  "include": [
    "src",
    "react-app-env.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
